{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@Actions": ["src/Actions"],
      "@Utils/*": ["src/utils/*"],

      "@Lib/*": ["src/lib/*"],
      "@Components": ["src/components"],
      "@Graphql": ["src/graphql"],
      "@Layouts": ["src/layouts"],
      "@Screens": ["src/screens"],
      "@Icons": ["src/assets/icons"],
      "@Assets/*": ["src/assets/*"],
      "@Pages/*": ["pages/*"],
      "@Styled": ["src/styled"],
      "@Reducers/*": ["src/Redux/Reducers/*"],
      "@Redux": ["src/Redux"],
      "@Redux/*": ["src/Redux/*"],
      "@Server/*": ["server/*"],
      "@Services": ["src/Services"],
      "@Services/*": ["src/Services/*"],
      "@Static/*": ["public/*"],
      "@Styled/*": ["src/Styled/*"],
      "@Styles/*": ["src/styles/*"],
      "@Test/*": ["test/*"],
    }
  },
  "include": [
    "types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
